# Maintainer:  Caleb Maclennan <caleb@alerque.com>
# Contributor: Martin Tournoij <martin@arp242.net>

pkgname=pqiv
pkgver=2.12
pkgrel=1
pkgdesc='Modern rewrite of Quick Image Viewer'
arch=('x86_64' 'i686')
url="https://github.com/phillipberndt/$pkgname"
license=('GPL3')
depends=('gtk3'
         'imagemagick'
         'libarchive'
         'libspectre'
         'libwebp')
source=("$pkgname-$pkgver.tar.gz::$url/archive/$pkgver.tar.gz")
sha256sums=('1538128c88a70bbad2b83fbde327d83e4df9512a2fb560eaf5eaf1d8df99dbe5')

build() {
    cd "$pkgname-$pkgver"
    ./configure --without-libav --without-poppler
    make
}

package() {
    cd "$pkgname-$pkgver"
    make DESTDIR="$pkgdir" install
}
